{% block mainContent %}
    {# --- Big Header Section (Placeholder) --- #}
    <section class="home-hero" aria-labelledby="hero-name hero-subtitle">
        <div class="container">
            {# --- ADDED HEADING STRUCTURE --- #}
            <h1 id="hero-name" class="hero-name">Kebran Alexander</h1>
            <img src="/assets/img/kebran-headshot.jpg" alt="Kebran Alexander Headshot" class="hero-image">
            <p id="hero-subtitle" class="hero-subtitle">
                Democrat & Public Servant For Dallas City Council,<br>District 4
            </p>
            {# --- END ADDED HEADING STRUCTURE --- #}
        </div>
    </section>
    {# --- End Big Header Section --- #}

    {# --- Our Priorities Section --- #}
