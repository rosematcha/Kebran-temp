{# _includes/partials/contact-form.njk #}
{#
    Netlify form handling:
    - Add `data-netlify="true"` to the <form> tag.
    - Add a hidden input with `name="form-name"` matching the form's `name`.
    - Ensure input fields have `name` attributes.
    - Set the `action` attribute to a success page URL (optional, defaults to Netlify's generic success page).
#}
<form
    name="contact"
    method="POST"
    data-netlify="true"
    netlify-honeypot="bot-field"
    action="/contact/success/" {# Optional: Create a success page at pages/contact/success.md #}
>
    {# Hidden input for Netlify to identify the form #}
    <input type="hidden" name="form-name" value="contact">

    {# Honeypot field for basic spam protection #}
    <p class="hidden">
        <label>Don’t fill this out if you’re human: <input name="bot-field"></label>
    </p>

    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
    </div>

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    </div>

    <div class="form-group">
        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject">
    </div>

    <div class="form-group">
        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="5" required></textarea>
    </div>

    <button type="submit" class="button button-primary">Send Message</button>
</form>
