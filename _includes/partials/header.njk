{# _includes/partials/header.njk #}
<header class="site-header">
    <div class="container">
        <a href="/" class="logo-link">
            <img src="/assets/img/logo.png" alt="{{ site.title }} Logo" class="logo-svg">
        </a>

        {# Add Hamburger Button (Hidden on Desktop) #}
        <button
            class="nav-toggle"
            aria-label="Toggle navigation"
            aria-expanded="false"
            aria-controls="main-nav-list"
        >
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>

        <nav class="main-nav" aria-label="Main navigation">
            {# Add an ID to the UL for easier JS targeting #}
            <ul id="main-nav-list">
                {# Loop through items, hide non-button ones on mobile via CSS #}
                {%- for item in navigation.items -%}
                    <li class="{{ 'nav-item-donate' if item.isButton else 'nav-item-standard' }}">
                        <a
                            href="{{ item.url }}"
                            {% if item.external %}target="_blank" rel="noopener noreferrer"{% endif %}
                            {% if item.isButton %}class="nav-button"{% endif %}
                        >
                            {{ item.text }}
                        </a>
                    </li>
                {%- endfor -%}
            </ul>
        </nav>
    </div>
</header>
